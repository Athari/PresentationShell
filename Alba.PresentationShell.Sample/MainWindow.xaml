<Window x:Class="Alba.PresentationShell.Sample.MainWindow" x:Name="self"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ALba.PresentationShell.Sample" Height="900" Width="525" WindowStartupLocation="CenterScreen"
        DataContext="{Binding ElementName=self}">
    <Control.Resources>
        <DataTemplate DataType="{x:Type ImageSource}">
            <Image Source="{Binding}" Stretch="None"/>
        </DataTemplate>
    </Control.Resources>
    <ListBox ItemsSource="{Binding JumboIcons}" VirtualizingPanel.ScrollUnit="Pixel"/>
</Window>
